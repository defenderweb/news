<h2>All Press Releases</h2>

<%= link_to 'New Press Release', new_post_path, :class => "admin new" %>

<table>
  <tr>
    <th></th>
    <th>Date</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
  	<td><img src="<%= post.brand.icon %>" height="75" width="75" /></td>
    <td><%= post.date.strftime("%B %d %Y") %></td>
    <td><%= post.title %></td>
    <td><%= post.content.truncate(150) %></td>
    <td><%= link_to 'Show', post, :class => "admin" %></td>
    <td><%= link_to 'Edit', edit_post_path(post), :class => "admin" %></td>
    <td><%= link_to 'Delete', post, :confirm => 'Are you sure?', :method => :delete, :class => "admin" %></td>
  </tr>
<% end %>
</table>

