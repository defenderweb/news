<p class="clear">
	<% if image.thumb_url.nil? %>
		<a href="<%= image.asset_url.to_s %>" class="image_thumb" rel="lightbox[product]" title="<%= image.name %>"><%= image_tag image.asset_url.to_s, :height => '80' %></a>
  	<% else %>
  		<a href="<%= image.asset_url.to_s %>" class="image_thumb" rel="lightbox[product]" title="<%= image.name %>"><%= image_tag image.thumb_url.to_s, :height => '80' %></a>
  	<% end %>
  	<br />
  	<b><%= link_to image.name, image.asset_url.to_s %></b><br />
  	<em>Image specs go here</em>
</p>