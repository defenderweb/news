<%= form_for [@brand, @image], :html => {:multipart => true } do |image_form| %>
  
  <%= render 'shared/error_messages', :object => image_form.object %>
  
  
  
  <div class="field">
    <%= image_form.label :name %>
    <%= image_form.text_field :name %>
  </div>  
  
  <div class="field">
    <%= image_form.file_field :asset %>
  </div>  
  
  <div class="actions">
    <%= image_form.submit %>
  </div>
<% end %>