<h2>All Brand Presskits</h2>

<table>

	<% @main_division.each do |main_div| %>
	  <tr>
	    <td><img src="<%= main_div.icon %>" height="75" width="75" /></td>
	    <td><h3><%= main_div.name %></h3><%= link_to 'Explore Presskits', main_div %></td>
	
	    <td><%= link_to 'Edit', edit_brand_path(main_div) %></td>
	    <td><%= link_to 'Destroy', main_div, :confirm => 'Are you sure?', :method => :delete %></td>
	  </tr>
	  <% @divisions.each do |division| %>
		  <tr class="division">
		    <td><img src="<%= division.icon %>" height="75" width="75" /></td>
		    <td><h3><%= division.name %></h3><%= link_to 'Explore Presskits', division %></td>
		
		    <td><%= link_to 'Edit', edit_brand_path(division) %></td>
		    <td><%= link_to 'Destroy', division, :confirm => 'Are you sure?', :method => :delete %></td>
		  </tr>
		  <% get_brands_of(division).each do |brand| %>
			  <tr>
			    <td><img src="<%= brand.icon %>" height="75" width="75" /></td>
			    <td><h3><%= brand.name %></h3><%= link_to 'Explore Presskits', brand %></td>
			
			    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
			    <td><%= link_to 'Destroy', brand, :confirm => 'Are you sure?', :method => :delete %></td>
			  </tr>
			<% end %>
		<% end %>
	<% end %>
</table>

<br />


