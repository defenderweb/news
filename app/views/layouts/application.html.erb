<!DOCTYPE html>
<html>
<head>
  <title><%= page_title "News & PR" %></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <script type="text/javascript" src="/javascripts/scriptaculous.js?load=effects,builder"></script>
  <script type="text/javascript" src="/javascripts/lightbox.js"></script>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
      <%= render 'layouts/header' %>
      <div class="shadow">
      	<div id="banner" class="short">
          <img id="bannerImage" class="fl" src="http://cwdlimited.com/images/brands/banner.jpg" />
          <h1>News & PR</h1>
        </div>
        <div class="clear"></div>
        <div id="content">
        	<div class="span-6">
        		<%= render 'layouts/side_nav' %>
			</div>
			
			<div class="span-17 last">	
				
				<% flash.each do |key, value| %>
				  	<div class="flash <%= key %>"><%= value %></div>
				<% end %>
				
				<span class="fr">					
					<% if signed_in? %>
						<% if current_user.admin? %>
							<%= link_to 'Manage Users', '/users', :class => "admin" %>
						<% end %>
						<%= link_to "My Profile", current_user, :class => "admin" %>
						<%= link_to "Log Out", signout_path, :method => :delete, :class => "admin"  %>
					<% else %>
						<%= link_to "Log In", signin_path %>
					<% end %>
				</span>					
				
				<%= yield %>
			</div>
			<div class="clear"></div>
		</div>
	  </div>
	</div>
	
	<%= render 'layouts/footer' %>
	
	
        
</body>
</html>
