<h2>Sign In</h2>
<%= form_for(:session, :url => sessions_path) do |f| %>
  
  <% flash.each do |key, value| %>
  	<div class="flash <%= key %>"><%= value %></div>
  <% end %>
  
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign In" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>