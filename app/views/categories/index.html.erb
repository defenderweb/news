<h2><%= @brand.name %> Categories</h2>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Name</th>
    <th># Products</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% if @categories.length > 0 %>
	<% @categories.each do |category| %>
	  <tr>
	    <td><%= category.name %></td>
	    <td><%= category.products.length %></td>
	    <td><%= link_to 'Edit', edit_brand_category_path(@brand, category), :class => "admin" %></td>
	    <td><%= link_to 'Delete', [category.brand, category], :confirm => 'Are you sure?', :method => :delete, :class => "admin" %></td>
	  </tr>	
	<% end %>
<% else %>
	<tr>
	    <td><em>No Categories</em></td>
	    <td></td>
	    <td></td>
	    <td></td>
	</tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_brand_category_path, :class => "admin new" %>
<%= link_to 'Back', @brand, :class => "admin" %>
